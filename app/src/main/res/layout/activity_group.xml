<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    >

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="@color/deep_purple_500"
      android:layout_marginTop="32dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="32dp"
      />
  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="@color/green_500"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView1"
      app:layout_constraintEnd_toEndOf="@+id/imageView1"
      />
  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="@color/indigo_500"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="@+id/imageView2"
      />
  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="@color/light_blue_500"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      />
  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="@color/deep_orange_500"
      app:layout_constraintEnd_toEndOf="@+id/imageView4"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView4"
      />

  <Button
      android:id="@+id/animateButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/animate"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="16dp"
      />

  <android.support.constraint.Group
      android:id="@+id/group"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:constraint_referenced_ids="imageView1,imageView2,imageView3,imageView4,imageView5"
      />
</android.support.constraint.ConstraintLayout>
